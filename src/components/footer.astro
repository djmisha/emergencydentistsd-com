---
import { Icon } from "astro-icon/components";
import logoImage from "@/assets/logo.svg";
---

<footer class="bg-gray-900 text-gray-400 mt-20">
  <div class="max-w-7xl mx-auto px-4 py-10">
    <!-- Contact Info -->
    <div class="flex items-start gap-3 justify-center text-center pb-12">
      <div>
        <h3 class="text-xl gray-400 mb-1">Steven J. Byers, DDS</h3>
        <p class="text-sm text-gray-400 mb-0.5">4403 Marlborough Avenue</p>
        <p class="text-sm text-gray-400">San Diego, CA 92116</p>
      </div>
    </div>

    <!-- Main Contact Section -->
    <div
      class="flex flex-col md:flex-row items-start md:items-center gap-6 mb-8 pb-12 border-b border-gray-700">
      <!-- Action Links -->
      <a
        href="https://maps.app.goo.gl/sRuYnFLpM1tyNUUi9"
        target="_blank"
        rel="noopener"
        class="flex items-center gap-3 text-cyan-600 hover:text-cyan-400 transition group md:w-1/3 md:justify-center">
        <Icon
          class="w-12 h-12 group-hover:scale-105 transition"
          name="bx:bxs-map"
        />
        <span class="text-xl md:text-2xl">Directions</span>
      </a>
      <a
        href="tel:6192827060"
        class="flex items-center gap-3 text-cyan-600 hover:text-cyan-400 transition group md:w-1/3 md:justify-center">
        <Icon
          class="w-12 h-12 group-hover:scale-105 transition"
          name="bx:bxs-phone-call"
        />
        <span class="text-xl md:text-2xl">(619) 282-7060</span>
      </a>
      <a
        href="sms:6192827060?&body=I'm%20reaching%20out%20regarding%20Emergency%20Dental%20services"
        class="flex items-center gap-3 text-cyan-600 hover:text-cyan-400 transition group md:w-1/3 md:justify-center">
        <Icon
          class="w-12 h-12 group-hover:scale-105 transition"
          name="bx:bxs-message"
        />
        <span class="text-xl md:text-2xl">Text Us</span>
      </a>
    </div>

    <!-- Navigation Links -->
    <div class="flex flex-wrap justify-center gap-6 mb-8">
      <a href="/" class="text-gray-400 hover:text-cyan-500 transition">Home</a>
      <a href="/emergency" class="text-gray-400 hover:text-cyan-500 transition"
        >Emergency Services</a
      >
      <a href="/cosmetic" class="text-gray-400 hover:text-cyan-500 transition"
        >Cosmetic Services</a
      >
      <a href="/about" class="text-gray-400 hover:text-cyan-500 transition"
        >About Us</a
      >
      <a href="/faq" class="text-gray-400 hover:text-cyan-500 transition">FAQ</a
      >
    </div>

    <!-- Copyright -->
    <div class="text-center pt-12 border-t border-gray-700">
      <p class="text-sm text-gray-600">
        Copyright Â© {new Date().getFullYear()} Steven J. Byers, DDS - Emergency
        Dentist San Diego, California. All rights reserved.
      </p>
    </div>
  </div>
</footer>
