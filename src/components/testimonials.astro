  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
    {
      testimonials.map((testimonial) => (
        <div class="bg-white border-2 border-gray-100 rounded-lg p-6 shadow hover:shadow-xl transition md:even:mt-8">
          <div class="flex items-center gap-3 mb-4">
            <div class="bg-cyan-500 rounded-full p-3 w-12 h-12 flex items-center justify-center">
              <Icon class="text-white w-6 h-6" name="bx:bxs-user" />
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">{testimonial.name}</h3>
              <p class="text-sm text-cyan-500">{testimonial.platform}</p>
            </div>
          </div>
          <p class="text-gray-900 text-sm leading-relaxed italic">
            "{testimonial.text}"
