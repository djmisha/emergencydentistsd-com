const testimonials = [
  {
    name: "Renee Thompson",
    platform: "Google Review",
    gender: "female",
    text: "Saw Dr. Beyer as an emergency (own doctor on vacation) to repair a broken tooth. Every member of his team was professional and so friendly.",
  },
  {
    name: "Marlon Robinson",
    platform: "Google Review",
    gender: "male",
    text: "Very charming dentistry with a crew that makes you feel very welcoming from day one. They really care about their patients and deal you very honestly. Happy I found this place.",
  },
  {
    name: "Eric Larson",
    platform: "Google Review",
    gender: "male",
    text: "Dr. Byers has been my dentist of choice for some 20+ years now. Service has always been excellent. Today, as part of an exam, they did a 3D x-ray of my mouth using a fancy new machine.",
  },
  {
    name: "Albert Cheung",
    platform: "Google Review",
    gender: "male",
    text: "The staff were friendly, courteous, and very professional. Dr Byers accommodated my emergency visit right away to re-attach a dislodged crown while I was on vacation in San Diego.",
  },
];
