---
interface Props {
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted";
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-8 py-4",
};

const styles = {
  outline: "border-2 border-cyan-500 hover:bg-cyan-50 text-cyan-500",
  primary:
    "bg-orange-600 text-white hover:bg-orange-700 shadow-xl border-2 border-transparent",
};
---

<button
  {...rest}
  class:list={[
    "rounded-lg text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 font-bold",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>
