---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-8 py-3",
  md: "px-4 py-1.5",
};

const styles = {
  outline: "bg-white border-2 border-cyan-500 hover:bg-cyan-50 text-cyan-500 ",
  primary:
    "bg-white text-orange-600 hover:bg-orange-50 border-2 border-orange-600",
  inverted: "bg-white text-gray-900 border-2 border-transparent",
  muted: "bg-gray-100 hover:bg-gray-200 border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-full text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 font-bold",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
