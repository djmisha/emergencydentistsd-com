---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-900">
          Contact Emergency Dentist San Diego
        </h2>
        <p class="text-base leading-relaxed text-gray-900 mt-3">
          Have a dental emergency? We are here to help 24/7. Call or text us now
          for immediate assistance.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-900">
            <Icon class="text-cyan-500 w-4 h-4" name="uil:map-marker" />
            <span
              >Serving San Diego County - Kensington, North Park, Normal Heights</span
            >
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-900">
            <Icon class="text-cyan-500 w-4 h-4" name="uil:phone" />
            <a href="tel:6192827060" class="hover:text-cyan-500"
              >(619) 282-7060</a
            >
          </div>
        </div>

        <div class="mt-8 p-6 bg-red-50 border-l-4 border-red-600 rounded-lg">
          <p class="text-lg font-semibold text-red-900 mb-2">
            24/7 Emergency Dental Care
          </p>
          <p class="text-red-800 mb-4">
            Don't wait - call or text us now for immediate dental emergency
            assistance.
          </p>
          <div class="flex flex-col gap-3">
            <a
              href="tel:6192827060"
              class="bg-orange-600 text-white font-bold py-4 px-8 rounded-lg shadow-xl hover:bg-orange-700 text-center">
              Call Now (619) 282-7060
            </a>
            <a
              href="sms:6192827060?&body=I'm%20reaching%20out%20regarding%20Emergency%20Dental%20services"
              class="bg-cyan-500 text-white font-bold py-4 px-8 rounded-lg shadow-xl hover:bg-cyan-600 text-center">
              Text Us for an Appointment
            </a>
          </div>
        </div>
      </div>
      <div class="bg-gray-100 p-6 rounded-lg">
        <h3 class="text-xl font-semibold mb-4 text-gray-900">
          Emergency Services Available
        </h3>
        <ul class="space-y-2 text-gray-900">
          <li>✓ Severe Toothaches</li>
          <li>✓ Knocked-Out Teeth</li>
          <li>✓ Broken or Cracked Teeth</li>
          <li>✓ Lost Fillings or Crowns</li>
          <li>✓ Dental Infections</li>
          <li>✓ Trauma & Injuries</li>
        </ul>
      </div>
    </div>
  </Container>
</Layout>
